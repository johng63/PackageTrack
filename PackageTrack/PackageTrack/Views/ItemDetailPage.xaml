<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PackageTrack.Views.ItemDetailPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Order="Primary" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <StackLayout Spacing="20" Padding="15">
        <Label Text="BarCode:" FontSize="Medium" />
        <Label Text="{Binding Item.BarCode}" FontSize="Small"/>
        <Label Text="Project:" FontSize="Medium" />
        <Entry Text="{Binding Item.Project}" FontSize="Small"/>
        <Label Text="Description:" FontSize="Medium" />
        <Entry Text="{Binding Item.Description}" FontSize="Small"/>
        <Label Text="Checked In By:" FontSize="Medium" />
        <Label Text="{Binding Item.CheckInUser}" FontSize="Small"/>
        <Label Text="Check In Date:" FontSize="Medium" />
        <Label Text="{Binding Item.CheckInDate}" FontSize="Small"/>
        <Label Text="Checked Out By:" FontSize="Medium" />
        <Label Text="{Binding Item.CheckInUser}" FontSize="Small"/>
        <Label Text="Check Out Date:" FontSize="Medium" />
        <Label Text="{Binding Item.CheckInDate}" FontSize="Small"/>

    </StackLayout>
</ContentPage>